{
  "name": "codewiki",
  "displayName": "CodeWiki",
  "description": "An IDE plugin that automates the generation and maintenance of software design documents.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:codewiki.mainView"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codewiki-container",
          "title": "CodeWiki",
          "icon": "$(comment-discussion)"
        }
      ]
    },
    "views": {
      "codewiki-container": [
        {
          "id": "codewiki.mainView",
          "type": "webview",
          "name": "CodeWiki"
        }
      ]
    },
    "commands": [
      {
        "command": "codewiki.runAgent",
        "title": "CodeWiki: Run Agent..."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack",
    "watch": "webpack --watch",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@langchain/google-genai": "^0.2.12",
    "@types/glob": "^8.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "glob": "^8.1.0",
    "tiktoken": "^1.0.21",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.90.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@langchain/core": "^0.3.58",
    "@langchain/openai": "^0.5.13",
    "@types/uuid": "^10.0.0",
    "@vscode/codicons": "^0.0.36",
    "langchain": "^0.3.28",
    "uuid": "^11.1.0"
  }
}
