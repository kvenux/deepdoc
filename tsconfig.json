{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2020",
    "outDir": "dist",
    "lib": [
      "ES2020",
      "DOM"
    ],
    "sourceMap": true,
    "strict": true,
    "rootDir": "src",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@common/*": [
        "common/*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    ".vscode-test"
  ]
}
